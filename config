general {
    colors = true
    interval = 5
    output_format = "i3bar"
}

order += "load"
order += "memory"
order += "disk /"
order += "battery 0"
order += "time"

load {
    format = "CPU (1 min): %1min"
}

memory {
    format = "RAM: %used"
}

disk "/" {
    format = "Disk: %avail"
}

battery 0 {
    format = "Battery: %status %percentage"
    last_full_capacity = true
}

time {
    format = "%d-%m-%Y %H:%M:%S"
}
